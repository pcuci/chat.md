{
  "name": "filechat",
  "displayName": "Chat Markdown",
  "description": "Interact with LLMs directly in markdown files",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "filechat.newChat",
        "title": "New Chat Markdown"
      },
      {
        "command": "filechat.configureApi",
        "title": "Configure Chat Markdown API Key"
      }
    ],
    "configuration": {
      "title": "Chat Markdown",
      "properties": {
        "filechat.anthropicApiKey": {
          "type": "string",
          "description": "Anthropic API Key",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  }
}